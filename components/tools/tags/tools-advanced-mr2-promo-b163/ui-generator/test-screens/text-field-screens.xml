<screens>
    <screen name="SimpleTextFieldScreen">
        <text-field id="ID" maxchars="100"/>
    </screen>

    <screen name="SimpleTextFieldWithLabelScreen">
        <text-field id="ID" maxchars="100">
            <label>This is text field:</label>
        </text-field>
    </screen>

    <screen name="SimpleTextFieldWithMultiLineLabelScreen">
        <text-field id="ID" maxchars="100">
            <label>Ciao!\n This is text field:</label>
        </text-field>
    </screen>

    <screen name="MultiTextFieldScreen">
        <text-field id="ID" style="plain" maxchars="200">
            <label>Ciao!\n text field:</label>
        </text-field>
        <text-field id="ID2" style="password" maxchars="30">
            <label>%Another% text field [password]:</label>
        </text-field>
        <text-field id="ID3" maxchars="10"/>
    </screen>

</screens>
